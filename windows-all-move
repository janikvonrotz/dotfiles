#!/bin/bash

# Monitor 1 (eDP-1) coordinates and dimensions
first_monitor_x=0
first_monitor_y=0
first_monitor_width=1920
first_monitor_height=1080

# Monitor 2 (DP-1-3) coordinates and dimensions
second_monitor_x=1920
second_monitor_y=0
second_monitor_width=1920
second_monitor_height=1080

# Prompt user to select the monitor
read -p "Enter monitor number (1 for first monitor, 2 for second monitor): " monitor_choice

# Set coordinates based on the monitor choice
if [[ $monitor_choice -eq 1 ]]; then
    x=$first_monitor_x
    y=$first_monitor_y
    width=$first_monitor_width
    height=$first_monitor_height
elif [[ $monitor_choice -eq 2 ]]; then
    x=$second_monitor_x
    y=$second_monitor_y
    width=$second_monitor_width
    height=$second_monitor_height
else
    echo "Invalid monitor selection."
    exit 1
fi

# Move all windows to the selected monitor
for WINDOW_ID in $(wmctrl -l | awk '{print $1}'); do
    # Print current window ID and move command
    echo "Moving window $WINDOW_ID to monitor $monitor_choice at coordinates $x,$y."
    wmctrl -i -r "$WINDOW_ID" -e 0,"$x","$y","$width","$height"
done
